<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.roomfinder.ui.PreferencesActivity"
    tools:showIn="@layout/activity_preferences">

    <LinearLayout
        android:id="@+id/view_food"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preference_food"
            android:textSize="@dimen/title_txt_size" />

        <RadioGroup
            android:id="@+id/radioGrp_food"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_food_veg"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/preference_food_veg" />

            <RadioButton
                android:id="@+id/radio_food_non"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/preference_food_non" />

            <RadioButton
                android:id="@+id/radio_food_dont"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/preference_dont_care" />
        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/view_smoking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preference_smoking"
            android:textSize="@dimen/title_txt_size" />

        <RadioGroup
            android:id="@+id/radioGrp_smoking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_smoking_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/preference_yes" />

            <RadioButton
                android:id="@+id/radio_smoking_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/preference_no" />

            <RadioButton
                android:id="@+id/radio_smoking_dont"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/preference_dont_care" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_drinking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preference_drinking"
            android:textSize="@dimen/title_txt_size" />

        <RadioGroup
            android:id="@+id/radioGrp_drinking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_drinking_yes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/preference_yes" />

            <RadioButton
                android:id="@+id/radio_drinking_no"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/preference_no" />

            <RadioButton
                android:id="@+id/radio_drinking_dont"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/preference_dont_care" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_lifestyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/preference_life_style"
            android:textSize="20sp" />

        <RadioGroup
            android:id="@+id/radioGrp_lifestyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio_lifestyle_night"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/preference_life_style_night_owl" />

            <RadioButton
                android:id="@+id/radio_lifestyle_early"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/preference_life_style_night_early_bird" />

            <RadioButton
                android:id="@+id/radio_lifestyle_dont"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/radio_selector"
                android:button="@null"
                android:gravity="center"
                android:padding="10dp"
                android:text="@string/preference_dont_care" />
        </RadioGroup>
    </LinearLayout>

    <Button
        android:id="@+id/btn_pref_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"
        android:background="@drawable/roundbtn"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:text="update"
        android:textColor="#ffff"
        android:textSize="16sp" />

</LinearLayout>
